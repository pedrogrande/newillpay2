<%= simple_form_for(@retailer_profile) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= f.input :business_name, input_html: { class: 'form-control'}, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.input :website, input_html: { class: 'form-control'}, placeholder: 'http://example.com' %>
  </div>
  <div class="form-group">
    <%= f.input :phone, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :address1, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :address2, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :suburb, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :postcode, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :country, input_html: { class: 'form-control'}, priority: ['Australia'] %>
  </div>
  <div class="form-group">
    <%= f.input :paypal_username, input_html: { class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>
