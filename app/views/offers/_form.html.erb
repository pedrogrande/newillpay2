<%= simple_form_for(@offer) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.association :shopper_profile, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.association :retailer_profile, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :product_name, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :url, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :description, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :image, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :price, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :offer, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :expiry_days, collection: 1..10, prompt: 'How many days is this offer valid?', input_html: { class: 'form-control'} %>
  </div>


  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>
