<% if !user_signed_in? %>
	<h3>I'll Pay</h3>
	<%= link_to "Sign in", new_user_session_path, class: 'btn btn-success btn-lg' %>
	<br>
	<p>OR</p>
	<p>Sign up</p>
	<%= link_to "I'm a retailer", new_user_registration_path(user_type: 'retailer'), class: 'btn btn-success' %>
	<%= link_to "I'm a shopper", new_user_registration_path(user_type: 'shopper'), class: 'btn btn-success' %>
<% end %>
<% if user_signed_in? %>
	<% if current_user.shopper_profile or current_user.retailer_profile %>
		<h2>My I'll Pay Dashboard</h2>
		<% if current_user.has_role? :shopper %>
			<%= render 'home/shopper' %>
		<% end %>
		<% if current_user.has_role? :retailer %>
			<%= render 'home/retailer' %>
		<% end %>
	<% end %>
<% end %>


